[init]
	templatedir = ~/.git_template
[push]
	default = current
[color]
	ui = auto
[alias]
	aa = add --all
	ap = add --patch
	branches = !legit branches
	ci = commit -v
	co = checkout
	pf = push --force-with-lease
	st = status
	graft = !legit graft
	harvest = !legit harvest
	publish = !legit publish
	unpublish = !legit unpublish
	sprout = !legit sprout
	sync = !legit sync
	switch = !legit switch
	resync = !legit resync
[core]
	excludesfile = /Users/ryenski/.gitignore
	autocrlf = input
	editor = mvim -f
[merge]
	ff = only
[commit]
	template = ~/.gitmessage
	gpgsign = true
[fetch]
	prune = true
[rebase]
	autosquash = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[log]
	decorate = full
[include]
	path = ~/.gitconfig.local
[diff]
	colorMoved = zebra
